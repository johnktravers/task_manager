<h1><%= @task.title %></h1>
<p><%= @task.description %></p>

<hr />

<%= link_to "Edit", edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to "Delete", delete_task_path(@task),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: 'btn btn-danger' %>
